<?xml version="1.0" encoding="utf-8"?>
<com.changf.pulltorefresh.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prsv_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@android:color/holo_blue_dark"
            />
        <com.dxp.view.ImbeddedListView
            android:id="@+id/lv_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</com.changf.pulltorefresh.PullToRefreshScrollView>